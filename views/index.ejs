<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>
    <div class="header">
      <a class="hero" href="/">MIE-TECH</a>

      <%- include('./partials/nav.ejs') %>
    </div>
    <h2>All blogs</h2>
    <% if (blogs.length > 0) {%> <%blogs.forEach(blog => {%>
    <a class="single" href="/blogs/<%= blog._id%>">
      <div class="blogs">
        <h3><%= blog.title %></h3>
        <p><%= blog.snippet %></p>
      </div>
    </a>

    <%})%> <%}else{%>
    <p>no blogs available...</p>
    <% }%> <%- include('./partials/footer.ejs') %>
  </body>
</html>
